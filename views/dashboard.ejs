<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    
    <!-- the new nav code that has the user's name -->
    <nav>
        <a href="/">
            <div class="logo-and-name-wrapper">
                <div class="logo-div"></div>
                <h1>API Deploy to Cyclic</h1>
            </div>
        </a>
        <div class="username-and-nav-menu">
            <p id="username-and-greeting">
                Welcome back!
                <span id="userTitle">Larry Wong</span>
            </p>
            <button class="nav-icon">
                <i class="fa fa-bars"></i>
            </button>
            <div class="nav-links--wrapper">
                <button class="close-button">&times;</button>
                <ul>
                    <a href="#"><li>link1</li></a>
                    <a href="#"><li>link2</li></a>
                    <a href="#"><li>link3</li></a>
                    <a href="#"><li>link4</li></a>
                    <li><p>pasgba424@gmail.com</p></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- end of the new nav tag -->

    <header class="slider"></header>
    <main id="home-page">

        <!-- notification box wrapper -->
        <div class="notificationBox-wrapper"  style="background-color: var(--success-color);">
            <div>
                <p><%= notification_msg[2]['signin_success'] %></p>
            </div>
            <div>
                <button class="close-notification">&times;</button>
            </div>
        </div>

        <!-- SOME DASHBOARD FEATURES HERE -->
        <h1>Lorem ipsum dolor sit amet consectetur adipisicing elit. Provident earum perspiciatis et tempore vero fugiat deleniti voluptatem? Assumenda, ex ad! Enim consequuntur accusamus commodi. Ab placeat maiores nostrum quibusdam in!</h1>
        <!-- END OF SOME DASHBOARD FEATURES -->

        <section id="article">

            <% for( let index = 0; index < local_data[1]['posts'].length; index++ ) { %>
                <a href="/articles.ejs">
                    <div class="article-card">
                        <div class="article-image-wrapper">
                            <img loading="lazy" src=<%= local_data[1]['posts'][index]['image'] %> alt="article-image">
                        </div>
                        <section class="article-info">
                            <h2 class="headline"><%- local_data[1]['posts'][index]['headline'] %></h2>
                            <% if (local_data[1]['posts'][index]['author_id'] !== local_data[1]['posts'][index]['author_id']) { %>
                               <!-- H3 for authour name -->
                                <h3 class="author"><%= local_data[1]['posts'][index]['author_id'] %></h3>
                            <% } %>
                            <div class="views-likes-date">
                                <div class="views">
                                    <i class="fa fa-eye"> Views</i>
                                    <p><%= local_data[1]['posts'][index]['views'] %></p>
                                </div>
                                <div class="likes">
                                    <a href="#"><i class="fa fa-thumbs-up"> <span>Likes</span></i></a>
                                    <p><%= local_data[1]['posts'][index]['likes'] %></p>
                                </div>
                                <div class="date">
                                    <!-- <p>Post</p> -->
                                    <p><%- local_data[1]['posts'][index]['published'] %></p>
                                </div>
                            </div>
                        </section>
                    </div>
                </a>
            <% } %>

        </section>
    </main>
    <footer></footer>
    <script src="../js/script.js"></script>
</body>
</html>
